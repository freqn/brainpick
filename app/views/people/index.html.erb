<div class="container centered">

  <h2>Resource Directory</h2>

<table class="table">
  <thead>

    <tr class="thead">
      <th>Name</th>
      <th>Specialty</th>
      <!--<th>Email</th>-->
      <th class="action">Action</th>
    </tr>
  </thead>
  <tbody>
    <td></td>
    <td></td>
    <td></td>

    <% @people.each do |person|%>
      <tr>
      <div class="data-row">
        <td><span class="data-wrap"><%= person.name %></span></td>
        <td><span class="data-wrap"><%= person.specialty %></span></td>
        <!--<td><span class="rotate glyphicon glyphicon-envelope"></span></td>-->
        <td class="action">
          <%= mail_to person.email, '', class: "glyphicon glyphicon-envelope", rel: "tooltip", title: "Send #{person.name} an email" %>
          <%= link_to "", "/people/#{person.id}/edit", class: "glyphicon glyphicon-cog", rel: "tooltip", title: "Edit #{person.name}" %>
          <%= link_to '', "/people/#{person.id}", class: "glyphicon glyphicon-trash", method: :delete, rel: "nofollow", title: "Delete #{person.name}" %></td>
        </div>
      </tr>
    <% end %>
<tr>
  <td></td>
  <td></td>
  <td></td>
</tr>
<tr>
  <td></td>
  <td><%= link_to "", "/people/new", class: "btn btn-default-open glyphicon glyphicon-plus", rel: "tooltip", title: "Add a new record", style: "width: 63%;" %></td>
  <td></td>
</tr>
</tbody>
</table>
</div>
